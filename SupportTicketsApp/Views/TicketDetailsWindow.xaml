<Window x:Class="SupportTicketsApp.Views.TicketDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportTicketsApp.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
mc:Ignorable="d"
       
Title="Заявка" Height="500" Width="860"
WindowStartupLocation="CenterScreen"
WindowStyle="None" ResizeMode="NoResize" Loaded="Window_Loaded"
>
    <Grid Margin="10,10,10,0">
        <!-- Остальной код Grid, TextBlock и StackPanel остаются прежними -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Right" Margin="0,-10,2,10" Height="37" Orientation="Horizontal" FlowDirection="RightToLeft" Width="50" Grid.Column="0">
            <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
        </StackPanel>

        <TextBlock Text="Детали заявки" FontSize="18" FontWeight="Bold" Margin="0,0,30,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="Номер заявки: " FontWeight="Bold"/>
            <TextBlock Text="{Binding TicketId}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="Тема: " FontWeight="Bold"/>
            <TextBlock Text="{Binding Title}"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="Клиент: " FontWeight="Bold"/>
            <TextBlock Text="{Binding ClientName}"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="Ответственный: " FontWeight="Bold"/>
            <TextBlock Text="{Binding EmployeeFullName}"/>
        </StackPanel>

        <TextBlock Grid.Row="5" Text="Описание:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="5" Text="{Binding Description}" TextWrapping="Wrap"/>

        <!--  Add more details as needed -->
    </Grid>
</Window>
